  "repository": "https://github.com/bisnuray/scribddownloader",
  "keywords": ["telegram", "bot", "scribd", "python", "pyrogram"],
  "env": {
    "API_ID": {
      "description": "Your Telegram API ID",
      "required": true
    },
    "API_HASH": {
      "description": "Your Telegram API Hash",
